<Application
    x:Class="RS.DouYinLearning.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RS.DouYinLearning"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RS.DouYinWidgets;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <FontFamily x:Key="iconfont">pack://application:,,,/RS.DouYinLearning;component/Assets/#iconfont</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
