<rs:RSDouYinWindow
    x:Class="RS.DouYinLearning.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.DouYinLearning"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RS.DouYinLearning.Models"
    xmlns:rs="https://streamingtool.douyin.com/wpf/learning/2024"
    x:Name="this"
    Title="MainWindow"
    MinWidth="1080"
    MinHeight="720"
    MouseLeftButtonUp="RSDouYinWindow_PreviewMouseLeftButtonUp"
    MouseMove="RSDouYinWindow_MouseMove"
    PreviewMouseLeftButtonDown="RSDouYinWindow_PreviewMouseLeftButtonDown"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    mc:Ignorable="d">
    <rs:RSDouYinWindow.DataContext>
        <local:MainWindowViewModel />
    </rs:RSDouYinWindow.DataContext>
    <rs:RSDouYinWindow.Resources>
        <ResourceDictionary>
            <BackEase x:Key="BackEaseAnimation" EasingMode="EaseInOut" />
            <Storyboard x:Key="ScaleYAnimation">
                <DoubleAnimation
                    AutoReverse="True"
                    EasingFunction="{StaticResource BackEaseAnimation}"
                    RepeatBehavior="Forever"
                    Storyboard.TargetName="PART_LogIcon"
                    Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                    From="1"
                    To="-1"
                    Duration="0:0:2.5" />
            </Storyboard>



            <ControlTemplate x:Key="Test">
                <Border Padding="5,10,5,10">
                    <StackPanel>
                        <Button
                            Padding="10,8,10,8"
                            HorizontalAlignment="Stretch"
                            Content="转场"
                            FontSize="15"
                            Style="{StaticResource RSDouYin.Styles.IconWithDesButton}" />
                        <Button
                            Padding="10,8,10,8"
                            HorizontalAlignment="Stretch"
                            Content="重命令"
                            FontSize="15"
                            Style="{StaticResource RSDouYin.Styles.IconWithDesButton}" />
                        <Button
                            Padding="10,8,10,8"
                            HorizontalAlignment="Stretch"
                            Content="删除场景"
                            FontSize="15"
                            Foreground="#cb332f"
                            Style="{StaticResource RSDouYin.Styles.IconWithDesButton}" />
                    </StackPanel>
                </Border>

            </ControlTemplate>


            <Style x:Key="RSDouYin.Styles.SystemInfo" TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="5,0,3,0" />
                <Setter Property="Foreground" Value="#969091" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>



            <Style
                x:Key="RSDouYin.Styles.SystemIconInfo"
                BasedOn="{StaticResource RSDouYin.Styles.IconButton}"
                TargetType="{x:Type Button}">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Foreground" Value="#969091" />
                <Setter Property="Margin" Value="0" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Transparent" />
                    </Trigger>
                </Style.Triggers>
            </Style>


            <Style
                x:Key="RSDouYin.Styles.CloseLiveButton"
                BasedOn="{StaticResource RSDouYin.Styles.ButtonBase}"
                TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="#fff" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="0,5,5,5" />
                <Setter Property="Background" Value="#292929" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding rs:ControlsHelper.CornerRadius}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <ContentControl Content="{TemplateBinding Content}" TextBlock.FontSize="{TemplateBinding FontSize}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Text="关播" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <ControlTemplate x:Key="DouYinDegreeControlTemplate">
                <Border
                    Padding="8,2,8,2"
                    VerticalAlignment="Center"
                    Background="#6c76a6"
                    CornerRadius="8">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Path
                            Width="9"
                            Height="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource RSDouYin.Icons.Medal}"
                            Fill="Gold"
                            Stretch="Fill" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="9"
                            Foreground="#fff"
                            Text="{Binding Degree}" />
                    </StackPanel>
                </Border>
            </ControlTemplate>

            <ControlTemplate x:Key="AudienceModelControlTemplate" TargetType="{x:Type RadioButton}">
                <Border
                    x:Name="PART_Border"
                    Margin="0,5,0,5"
                    Padding="5"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    CornerRadius="5">
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border
                                x:Name="PART_IsSelect"
                                Width="2"
                                Margin="0,5,15,5"
                                Background="#E54969"
                                Visibility="Hidden" />
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    x:Name="PART_NumberBorder"
                                    Grid.Column="0"
                                    Padding="5,2,5,2"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    CornerRadius="5">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#FFF"
                                        Text="{Binding Number}" />
                                </Border>

                                <Border
                                    Grid.Column="1"
                                    Width="35"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    ClipToBounds="True"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush
                                            ImageSource="{Binding ImgLink}"
                                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                                            RenderOptions.EdgeMode="Aliased"
                                            Stretch="UniformToFill" />
                                    </Border.Background>
                                </Border>
                                <Grid Grid.Column="2" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#fff"
                                        Text="{Binding NickName}"
                                        TextTrimming="CharacterEllipsis" />
                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="0,2,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <ContentControl Template="{StaticResource DouYinDegreeControlTemplate}" />
                                        <Border
                                            Margin="5,0,5,0"
                                            Padding="8,1,8,1"
                                            VerticalAlignment="Center"
                                            Background="#AA333333"
                                            BorderBrush="#f1f2f3"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                            <TextBlock
                                                x:Name="PART_Relation"
                                                VerticalAlignment="Center"
                                                FontSize="9"
                                                Foreground="#fff"
                                                TextTrimming="CharacterEllipsis" />
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Column="3" VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="#FFF"
                                        Text="{Binding Contribution}" />
                                </Grid>
                            </Grid>
                        </Grid>

                        <Popup
                            x:Name="PART_Popup"
                            AllowsTransparency="True"
                            HorizontalOffset="-10"
                            IsOpen="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsChecked}"
                            Placement="Right"
                            PlacementTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                            StaysOpen="False"
                            VerticalOffset="-2">
                            <Border
                                Width="280"
                                Height="460"
                                Margin="15"
                                Background="#2F2F2F"
                                BorderBrush="#545454"
                                BorderThickness="1"
                                CornerRadius="15">
                                <Grid>
                                    <Border Padding="10">
                                        <StackPanel>
                                            <StackPanel
                                                Margin="15,15,15,10"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <Border
                                                    Grid.Column="1"
                                                    Width="60"
                                                    Height="60"
                                                    Margin="5,0,5,0"
                                                    VerticalAlignment="Center"
                                                    ClipToBounds="True"
                                                    CornerRadius="50">
                                                    <Border.Background>
                                                        <ImageBrush
                                                            ImageSource="{Binding ImgLink}"
                                                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                            RenderOptions.EdgeMode="Aliased"
                                                            Stretch="UniformToFill" />
                                                    </Border.Background>
                                                </Border>

                                                <Button
                                                    Width="110"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="回关"
                                                    Style="{StaticResource RSDouYin.Styles.NoIconBtn}" />

                                                <Button
                                                    Margin="10,0,0,0"
                                                    Padding="5"
                                                    VerticalAlignment="Center"
                                                    rs:ControlsHelper.IconData="{StaticResource RSDouYin.Icons.Setting}"
                                                    rs:ControlsHelper.IconHeight="14"
                                                    rs:ControlsHelper.IconWidth="14"
                                                    Style="{StaticResource RSDouYin.Styles.IconButton}"
                                                    ToolTip="直播设置" />
                                            </StackPanel>

                                            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Foreground="#fff"
                                                    Text="{Binding NickName}"
                                                    TextTrimming="CharacterEllipsis" />

                                                <ContentControl Margin="5,0,0,0" Template="{StaticResource DouYinDegreeControlTemplate}" />
                                            </StackPanel>

                                            <StackPanel Margin="20,10,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#949494"
                                                    Text="{Binding Location}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </StackPanel>

                                            <StackPanel Margin="20,10,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#fff"
                                                    TextTrimming="CharacterEllipsis">
                                                    <Run Text="{Binding InterestCount}" />
                                                    <Run Text="关注▪" />
                                                    <Run Text="{Binding FansCount}" />
                                                    <Run Text="粉丝" />
                                                </TextBlock>
                                            </StackPanel>

                                            <Border Style="{StaticResource RSDouYin.Styles.AudiencePopupBorder}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#fff"
                                                        Text="粉丝团"
                                                        TextTrimming="CharacterEllipsis" />

                                                    <TextBlock
                                                        x:Name="PART_IsFansTeam"
                                                        Grid.Column="2"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#fff"
                                                        TextTrimming="CharacterEllipsis" />
                                                </Grid>
                                            </Border>

                                            <Border
                                                Padding="10,5,10,5"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource RSDouYin.Styles.AudiencePopupBorder}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="11"
                                                            Foreground="#fff"
                                                            Text="礼物图鉴"
                                                            TextTrimming="CharacterEllipsis" />
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="11"
                                                            Foreground="#fff"
                                                            TextTrimming="CharacterEllipsis">
                                                            <Run Text="{Binding GiftCollectionCount}" />
                                                            <Run Text="/6" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Image
                                                        Grid.Column="1"
                                                        Width="25"
                                                        Height="25"
                                                        Margin="5,0,0,0"
                                                        Source="Assets/secretgift.png" />
                                                </Grid>
                                            </Border>

                                            <Border Style="{StaticResource RSDouYin.Styles.AudiencePopupBorder}">
                                                <StackPanel>
                                                    <Grid Margin="0,8,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#fff"
                                                            Text="和我的直播互动" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="9"
                                                            Foreground="#fff">
                                                            <Run Text="{Binding InteractionBegin, StringFormat='MM月dd日'}" />
                                                            <Run Text="-" />
                                                            <Run Text="{Binding InteractionEnd, StringFormat='MM月dd日'}" />
                                                        </TextBlock>
                                                    </Grid>

                                                    <Grid Margin="0,8,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#fff"
                                                            Text="本场观看时长" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="12"
                                                            Foreground="#fff">
                                                            <Run Text="{Binding ViewTime}" />
                                                            <Run Text="分钟" />
                                                        </TextBlock>
                                                    </Grid>

                                                    <Grid Margin="0,8,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#fff"
                                                            Text="过去7天观看直播" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="12"
                                                            Foreground="#fff">
                                                            <Run Text="{Binding Last7DaysView}" />
                                                            <Run Text="天" />
                                                        </TextBlock>
                                                    </Grid>

                                                    <Grid Margin="0,8,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#fff"
                                                            Text="过去7天送礼" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="12"
                                                            Foreground="#fff">
                                                            <Run Text="{Binding Last7DaysGift}" />
                                                            <Run Text="次" />
                                                        </TextBlock>
                                                    </Grid>

                                                    <Grid Margin="0,8,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#fff"
                                                            Text="过去7天评论" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="12"
                                                            Foreground="#fff">
                                                            <Run Text="{Binding Last7DaysComments}" />
                                                            <Run Text="条" />
                                                        </TextBlock>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                    <Path
                                        Width="15"
                                        Height="18"
                                        Margin="0,20,-10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Data="{StaticResource RSDouYin.Icons.RightTriangle}"
                                        Fill="#2F2F2F"
                                        Stretch="Fill" />
                                </Grid>

                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        Direction="315"
                                        Opacity="0.2"
                                        ShadowDepth="0"
                                        Color="#000" />
                                </Border.Effect>
                            </Border>
                        </Popup>
                    </Grid>
                </Border>

                <ControlTemplate.Triggers>
                    <DataTrigger Binding="{Binding Number}" Value="1">
                        <Setter TargetName="PART_NumberBorder" Property="Background" Value="#B83032" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Number}" Value="2">
                        <Setter TargetName="PART_NumberBorder" Property="Background" Value="#B7622C" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Number}" Value="3">
                        <Setter TargetName="PART_NumberBorder" Property="Background" Value="#B58143" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RelationShip}" Value="Stranger">
                        <Setter TargetName="PART_Relation" Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RelationShip}" Value="Fans">
                        <Setter TargetName="PART_Relation" Property="Text" Value="粉丝" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RelationShip}" Value="Friend">
                        <Setter TargetName="PART_Relation" Property="Text" Value="朋友" />
                    </DataTrigger>
                    <Trigger SourceName="PART_Border" Property="IsMouseOver" Value="True">
                        <Setter TargetName="PART_Border" Property="Opacity" Value="0.8" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Trigger>

                    <Trigger Property="IsChecked" Value="True">
                        <Setter TargetName="PART_IsSelect" Property="Visibility" Value="Visible" />
                    </Trigger>

                    <DataTrigger Binding="{Binding IsFansTeam}" Value="True">
                        <Setter TargetName="PART_IsFansTeam" Property="Text" Value="已加入" />
                    </DataTrigger>

                    <DataTrigger Binding="{Binding IsFansTeam}" Value="False">
                        <Setter TargetName="PART_IsFansTeam" Property="Text" Value="未加入" />
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>

            <DataTemplate x:Key="AudienceModelDataTemplate" DataType="{x:Type models:AudienceModel}">
                <RadioButton>
                    <RadioButton.Style>
                        <Style TargetType="{x:Type RadioButton}">
                            <Setter Property="GroupName" Value="AudienceModelGroup" />
                            <Setter Property="Template" Value="{StaticResource AudienceModelControlTemplate}" />
                        </Style>
                    </RadioButton.Style>
                </RadioButton>

            </DataTemplate>




            <Style x:Key="RSDouYin.Styles.SendMsgUserNameBtn" TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="#8CE7FF" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding rs:ControlsHelper.CornerRadius}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ContentControl
                                        Grid.Column="0"
                                        DataContext="{TemplateBinding DataContext}"
                                        Template="{StaticResource DouYinDegreeControlTemplate}"
                                        TextBlock.Foreground="{TemplateBinding Foreground}" />
                                    <ContentControl
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Content="{TemplateBinding Content}"
                                        TextBlock.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=TxtSendMessage, Path=Text}" Value="">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>






            <ControlTemplate x:Key="NormalMsgControlTemplate">
                <TextBlock
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="#fff"
                    TextWrapping="WrapWithOverflow">
                    <InlineUIContainer BaselineAlignment="Center">
                        <Button
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="{Binding NickName}"
                            DataContext="{Binding BindsDirectlyToSource=True}"
                            FontSize="12"
                            Style="{StaticResource RSDouYin.Styles.SendMsgUserNameBtn}" />
                    </InlineUIContainer>
                    <Run Text=":" />
                    <Run Text="{Binding MsgInfo}" />
                </TextBlock>
            </ControlTemplate>

            <ControlTemplate x:Key="GreetingControlTemplate">
                <Border
                    Padding="5,0,5,0"
                    HorizontalAlignment="Left"
                    Background="#666acb"
                    CornerRadius="10">
                    <TextBlock
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="#fff"
                        TextWrapping="WrapWithOverflow">
                        <InlineUIContainer BaselineAlignment="Center">
                            <Button
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="{Binding NickName}"
                                DataContext="{Binding BindsDirectlyToSource=True}"
                                FontSize="12"
                                Style="{StaticResource RSDouYin.Styles.SendMsgUserNameBtn}" />
                        </InlineUIContainer>
                        <Run x:Name="PART_GreetingTxt" />
                    </TextBlock>
                </Border>
                <ControlTemplate.Triggers>
                    <DataTrigger Binding="{Binding IsFansTeam}" Value="True">
                        <Setter TargetName="PART_GreetingTxt" Property="Text" Value="通过 关注 来了" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsFansTeam}" Value="False">
                        <Setter TargetName="PART_GreetingTxt" Property="Text" Value="来了" />
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>

            <ControlTemplate x:Key="InterestControlTemplate">
                <TextBlock
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="#fff"
                    TextWrapping="WrapWithOverflow">
                    <InlineUIContainer BaselineAlignment="Center">
                        <Button
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="{Binding NickName}"
                            DataContext="{Binding BindsDirectlyToSource=True}"
                            FontSize="12"
                            Style="{StaticResource RSDouYin.Styles.SendMsgUserNameBtn}" />
                    </InlineUIContainer>
                    <Run Text=" 关注了你" />
                </TextBlock>
            </ControlTemplate>


            <DataTemplate DataType="{x:Type models:MsgModel}">
                <ContentControl
                    x:Name="PART_MsgModelTemplate"
                    Margin="0,3,0,3"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Template="{x:Null}" />
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding MsgType}" Value="NormalMsg">
                        <Setter TargetName="PART_MsgModelTemplate" Property="Template" Value="{StaticResource NormalMsgControlTemplate}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MsgType}" Value="Greeting">
                        <Setter TargetName="PART_MsgModelTemplate" Property="Template" Value="{StaticResource GreetingControlTemplate}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding MsgType}" Value="Interest">
                        <Setter TargetName="PART_MsgModelTemplate" Property="Template" Value="{StaticResource InterestControlTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>


        </ResourceDictionary>

    </rs:RSDouYinWindow.Resources>
    <rs:RSDouYinWindow.WinCommandContent>
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                    <Grid>
